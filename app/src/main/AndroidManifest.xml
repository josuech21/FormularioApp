<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.formularioapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FormularioApp">

        <!-- ********* 1. ACTIVITY PRINCIPAL (Punto de Inicio) ********* -->
        <activity
            android:name=".Registrarse_Activity"
            android:exported="true">
            <!-- Este bloque le dice a Android que esta es la pantalla que se lanza desde el Ã­cono -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Login_Activity"
            android:exported="false" />

        <!-- Activity para el Feed -->
        <activity
            android:name=".MiCuentaActivity"
            android:exported="false" />
        <activity
            android:name=".FeedActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Micarrito_Activity" />

    </application>

</manifest>
