<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".HistorialdeCompras_Activity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHistorial"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white" />

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarHistorial"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/containerHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtMensajeVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aún no se han generado compras de artículos"
        android:textSize="18sp"
        android:textColor="#757575"
        android:padding="24dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/toolbarHistorial"
        android:layout_marginTop="150dp"
        android:visibility="gone" />

</RelativeLayout>