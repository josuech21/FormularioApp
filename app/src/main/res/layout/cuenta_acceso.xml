<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Cuenta"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="14sp"
            android:textColor="#757575"/>
        <EditText
            android:id="@+id/txtPerfilNombre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Nombre apellido1 apellido2"
            android:textSize="18sp"
            android:textColor="#212121"
            android:paddingHorizontal="4dp"
            android:inputType="text"
            android:enabled="false"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:textSize="14sp"
            android:textColor="#757575"/>
        <EditText
            android:id="@+id/txtPerfilCorreo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="correoelectrónico@gmail.com"
            android:textSize="18sp"
            android:textColor="#212121"
            android:paddingHorizontal="4dp"
            android:inputType="textEmailAddress"
            android:enabled="false"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Contacto"
            android:textSize="14sp"
            android:textColor="#757575"/>
        <EditText
            android:id="@+id/txtPerfilContacto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="1111 2222"
            android:textSize="18sp"
            android:textColor="#212121"
            android:paddingHorizontal="4dp"
            android:inputType="phone"
            android:enabled="false"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btnHistorialCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#607D8B"
            android:text="Ver Historial de Compras"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnModificarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#607D8B"
            android:text="Modificar mis datos (Contraseña, etc.)"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMetodosPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#607D8B"
            android:text="Gestionar Métodos de Pago"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnGestionProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#8BC34A"
            android:text="Gestionar mis Productos (Vendedor)"
            android:textColor="#212121" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F44336"
        android:text="CERRAR SESIÓN"
        android:textColor="#FFFFFF" />

</LinearLayout>